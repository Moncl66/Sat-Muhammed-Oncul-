// Views/Daireler/Edit.cshtml - GÜNCELLENMİŞ
@model AidatTakipSistemi.Models.Daire

@{
    ViewData["Title"] = "Daire Düzenle";
}

<h1>Daire Düzenle</h1>
<h4>Daire Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Blok" class="control-label"></label>
                <input asp-for="Blok" class="form-control" />
                <span asp-validation-for="Blok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kat" class="control-label"></label>
                <input asp-for="Kat" class="form-control" />
                <span asp-validation-for="Kat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaireNo" class="control-label"></label>
                <input asp-for="DaireNo" class="form-control" />
                <span asp-validation-for="DaireNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SahipAdi" class="control-label"></label>
                <input asp-for="SahipAdi" class="form-control" />
                <span asp-validation-for="SahipAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SakinAdi" class="control-label"></label>
                <input asp-for="SakinAdi" class="form-control" />
                <span asp-validation-for="SakinAdi" class="text-danger"></span>
            </div>

            <hr />

            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label">Atanmış Sakin (Kullanıcı)</label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="@(ViewData["ApplicationUserId"] as SelectList)">
                    <option value="">-- Sakin Yok --</option>
                </select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}