// Views/Aidatlar/Delete.cshtml
@model AidatTakipSistemi.Models.Aidat

@{
    ViewData["Title"] = "Aidat Kaydını Sil";
}

<h1>Aidat Kaydını Sil</h1>

<h3>Bu aidat kaydını silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Aidat Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Daire
        </dt>
        <dd class="col-sm-10">
            @(Model.Daire?.Blok) Blok, No: @(Model.Daire?.DaireNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Donem)
        </dt>
        <dd class="col-sm-10">
            @Model.Donem.ToString("MMMM yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tutar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tutar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SonOdemeTarihi)
        </dt>
        <dd class="col-sm-10">
            @Model.SonOdemeTarihi.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OdendiMi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OdendiMi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>